.page-header
  %h3= t("controllers.actions", default: "Akcje")
%ul.nav.nav-pills.nav-stacked
  - if controller_name != 'sessions'
    %li= link_to t("controllers.sign_in", default: "Zaloguj się"), new_session_path(resource_name)
  - if devise_mapping.registerable? && controller_name != 'registrations'
    %li= link_to t("controllers.sign_up", default: "Utwórz konto"), new_registration_path(resource_name)
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    %li= link_to t("controllers.forget_password", default: "Przypomni hasło"), new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li= link_to t("controllers.confirmation_account", default: "Nie otrzymałeś linku potwierdzającego?"), new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %li= link_to t("controllers.unlock_link", default: "Nie otrzymałeś linku odblokowującego"), new_unlock_path(resource_name)
