.row
  .span8
    .page-header
      %h2= tt("page-header.h2", "Tworzenie nowego konta")
    %p= tt("p.description", "Utwórz konto aby móc w pełni korzystać z serwisu! Jako zalogowany użytkownik możesz obserwować wykładowców, zarządzać stroną wykładowcy lub uczelni")
    = simple_form_for(resource, validate: true, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f|
      = f.input :email, :required => true
      = f.input :password, :required => true
      = f.input :password_confirmation, :required => true
      .form-actions= f.button :submit, tt("form.submit", "Dołącz do nas!"), class: "btn btn-primary btn-large", id: "create_user"
  .span4= render :partial => "devise/shared/links"
