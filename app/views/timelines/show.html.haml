= render partial: "profiles/header"

.stream
  .row  
    .span8.offset2
      = simple_form_for Post.new, url: timeline_posts_path(screen_name: @lecturer.username) do |f|
        = f.input :body, label: false, input_html: { rows: 3, class: "span8" }, placeholder: "Rozpocznij rozmowę..."
        .pull-right= f.submit "Udostępnij", class: "btn"
  .row
    .span8.items.offset2
      - 10.times do
        .item
          = link_to "#", class: "avatar" do
            = image_tag "https://secure.gravatar.com/avatar/4e84843ebff0918d72ade21c6eesb1e4?size=50"
          .post
            .details
              %button.close &times;
              = link_to "macbury", '#', class: "author"
              na 
              = link_to "Tadeusz Grabiński", '#', class: "author"
